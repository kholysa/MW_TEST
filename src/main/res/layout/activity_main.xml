<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="residence.kholy.mobeewaveinterview.MainActivity">

    <TextView
        android:id="@+id/CommandAPDUTextOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10px"
        android:text="Command APDU"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="185dp" />

    <EditText
        android:id="@+id/CommandAPDUTextInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="10px"
        android:text="CommandAPDU Input"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/updateAPDUButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onAPDUButtonClick"
        android:padding="10px"
        android:text="Update byte output"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="94dp" />

</android.support.constraint.ConstraintLayout>
